    </script>

    <script>
        // Theme Toggle Functionality
        const themeToggle = document.getElementById('theme-toggle');
        const themeIcon = document.getElementById('theme-icon');

        // Check for saved theme preference or system preference
        const savedTheme = localStorage.getItem('theme');
        const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)');

        function setTheme(theme) {
            if (theme === 'dark') {
                document.documentElement.classList.add('dark');
                localStorage.setItem('theme', 'dark');
                themeIcon.classList.remove('fa-moon');
                themeIcon.classList.add('fa-sun');
            } else {
                document.documentElement.classList.remove('dark');
                localStorage.setItem('theme', 'light');
                themeIcon.classList.remove('fa-sun');
                themeIcon.classList.add('fa-moon');
            }
        }

        // Initial theme setup
        if (savedTheme) {
            setTheme(savedTheme);
        } else if (systemPrefersDark.matches) {
            setTheme('dark');
        }

        // Theme toggle event listener
        themeToggle.addEventListener('click', () => {
            const currentTheme = document.documentElement.classList.contains('dark') ? 'dark' : 'light';
            setTheme(currentTheme === 'dark' ? 'light' : 'dark');
        });

        function toggleDevice(section, device, state) {
            $.ajax({
                url: '/dashboard/smartHome',
                method: 'POST',
                data: {
                    section: section,
                    device: device,
                    state: state ? 'on' : 'off'
                },
                success: function (response) {
                    $('#status-indicator')
                        .text(`${section} device ${device} turned ${state ? 'on' : 'off'}`)
                        .fadeIn()
                        .delay(3000)
                        .fadeOut();
                },
                error: function () {
                    $('#status-indicator')
                        .text('Error updating device')
                        .addClass('bg-red-500')
                        .fadeIn()
                        .delay(3000)
                        .fadeOut();
                }
            });
        }

        // Project Description Modal Functionality
        const projectModal = document.getElementById('project-modal');
        const projectInfoBtn = document.getElementById('project-info-btn');
        const closeModal = document.querySelector('.close-modal');

        projectInfoBtn.addEventListener('click', () => {
            projectModal.style.display = 'block';
        });

        closeModal.addEventListener('click', () => {
            projectModal.style.display = 'none';
        });

        window.addEventListener('click', (event) => {
            if (event.target === projectModal) {
                projectModal.style.display = 'none';
            }
        });
    </script>
</body>

</html>